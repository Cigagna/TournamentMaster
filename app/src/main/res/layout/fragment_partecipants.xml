<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.alessioc.tournament.PartecipantsFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_gravity="center">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textbox_partecipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Register partecipants"
            android:textSize="16dp" />


        <ScrollView
            android:id="@+id/scroll_wiew_partecipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textbox_partecipants"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:scrollbars="none">

            <TableLayout

                android:id="@+id/partecipants_table"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


            </TableLayout>
        </ScrollView>



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/confirm_partecipants_floatingActionButton"
            app:backgroundTint="@color/colorDarkOrange"
            app:fabSize="normal"
            app:srcCompat="@drawable/icon_tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scroll_wiew_partecipants"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-85dp"
            android:clickable="true" />


    </RelativeLayout>
</FrameLayout>
